---
import Layout from "../layouts/layout.astro";
import RaffleTable from "../components/RaffleTable.svelte";

const raffles = [
  { name: "Rifa 1", soldSpots: 10, totalSpots: 100, status: "activa" },
  { name: "Rifa 2", soldSpots: 50, totalSpots: 50, status: "finalizada" },
  { name: "Rifa 3", soldSpots: 20, totalSpots: 60, status: "borrador" },
  { name: "Rifa 4", soldSpots: 5, totalSpots: 10, status: "inactiva" },
  { name: "Rifa 5", soldSpots: 25, totalSpots: 100, status: "activa" },
];
---

<Layout>
  <section
    class="w-full max-w-2xl mx-auto mt-8 p-6 bg-base-200 rounded-md shadow-md"
  >
    <h1 class="text-2xl font-bold mb-6 text-center text-white">
      Listado De Rifas
    </h1>
    <RaffleTable raffles={raffles} client:load />
  </section>
</Layout>
